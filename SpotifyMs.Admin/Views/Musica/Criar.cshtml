@model SpotifyMs.Aplication.Streaming.Dto.MusicaDto
@{
    ViewData["Title"] = "Criar Música";
}
<h1>@ViewData["Title"]</h1>

<form method="post" asp-controller="Musica" asp-action="Salvar">
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Nome</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Nome, new { @class = "form-control" })
            <span class="form-field-invalid" asp-validation-for="Nome"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Duracao</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Duracao, new { @class = "form-control" })
            <span class="form-field-invalid" asp-validation-for="Duracao"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">AlbumId</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.AlbumId, new { @class = "form-control" })
            <span class="form-field-invalid" asp-validation-for="AlbumId"></span>
        </div>
    </div>


    <button type="submit" class="btn btn-primary">Criar</button>
</form>

